<div class="container">
<h4>Don't see what you're looking for?</h4>
<div class="row">
<a href="/recipes" class="btn waves-effect waves-light">Do Another Search</a>
</div>
<div class="row">
<h3>Search Results</h3>
<div class="row">
<div id="columns">
<% recipe.recipes.forEach(function(recipe){%>
      <div class="card pin">
        <div class="card-image">
          <img class="card-image-pin" src="<%=recipe.image_url%>">
          <form method="POST" action="/recipes/individual">
          	<input hidden type="text" name="rId" value="<%=recipe.recipe_id%>">
          <button type="submit" class="btn-floating halfway-fab waves-effect waves-light indigo accent-2"><i class="large material-icons">info_outline</i></button></form>
        </div>
        <div class="card-content pin-p">
          <p>
          	<% var re = /\&\#8217\;/; %>
          	<% var reT = /\&amp\;/; %>
			<% if(recipe.title.search(re)){%>
				<% var title = recipe.title.replace(re, '\''); %>
				<%if(recipe.title.search(reT)){%>
					<% title = recipe.title.replace(reT, '\&');%>
				<%}%>
				<h5><%=title%></h5>
			<%}else{%>
				<h5><%=recipe.title%></h5>
			<%}%>
          </p>
        </div>
      </div>
<%});%>
</div>